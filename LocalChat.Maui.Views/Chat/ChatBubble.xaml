<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="LocalChat.Maui.Views.Chat.ChatBubble"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Resources>
        <Style x:Key="UserBubbleStyle" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="#DCF8C6" />
            <Setter Property="HorizontalOptions" Value="End" />
            <Setter Property="Margin" Value="40,2,10,2" />
        </Style>

        <Style x:Key="AssistantBubbleStyle" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="#FFFFFF" />
            <Setter Property="HorizontalOptions" Value="Start" />
            <Setter Property="Margin" Value="10,2,40,2" />
        </Style>
    </ContentView.Resources>

    <Frame
        x:Name="BubbleFrame"
        Padding="10,5"
        BorderColor="Transparent"
        CornerRadius="10"
        HasShadow="True"
        MaximumWidthRequest="500">
        <StackLayout Spacing="5">
            <ContentView x:Name="ContentContainer" />

            <Label
                x:Name="TimestampLabel"
                Margin="0,3,0,0"
                FontSize="11"
                HorizontalOptions="End"
                TextColor="#888888"
                VerticalOptions="End" />
        </StackLayout>
    </Frame>
</ContentView>
